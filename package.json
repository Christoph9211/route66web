        "jiti": "^2.5.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "tailwindcss": "^4.1.11"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.10.2",
        "@eslint/js": "^9.32.0",
        "@playwright/test": "^1.54.2",
        "@types/node": "^24.2.1",
        "@types/react": "^19.1.9",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^4.7.0",
        "concurrently": "^9.2.0",
        "eslint": "^9.32.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0",
        "vite": "^7.0.6",
        "wait-on": "^8.0.4"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "preview": "vite preview",
        "serve": "vite serve --host 0.0.0.0 --port 3000",
        "lint": "eslint .",
        "format": "prettier --write .",
        "test:e2e": "playwright test",
        "a11y:dev": "concurrently -k \"npm run serve\" \"wait-on http://localhost:3000 && npm run a11y\"",
        "a11y": "playwright test --project=chromium --grep @a11y",
        "a11y:ci": "npm run a11y || (cat a11y-report.json && exit 1)"
    },
